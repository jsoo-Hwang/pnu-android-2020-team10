<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget28"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/msg_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="130dp"
        android:src="@drawable/msg_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="받는사람 전화번호"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:textSize="12sp">
        </TextView>

        <EditText
            android:id="@+id/messageLayout_pH"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"
            android:phoneNumber="true"
            >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:text="예약 메세지 내용"
            android:textSize="12dp">
        </TextView>

        <EditText
            android:id="@+id/messageLayout_M"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:hint="메세지 내용을 입력해주세요."
            android:background="@drawable/border">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/messageLayout_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#dc3637"
            android:text="취소"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/messageLayout_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="#dc3637"
            android:text="저장"
            android:textColor="#ffffff"></Button>
    </LinearLayout>


</LinearLayout>
